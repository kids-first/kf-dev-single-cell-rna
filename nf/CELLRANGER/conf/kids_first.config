process {
    withName: COUNT {
        publishDir = [
            path: {"./results/"},
            mode: 'copy',
            ]
        ext.args = { [
            (params.nosecondary) ? "--nosecondary" : "",
            "--create-bam ${params.create_bam ? 'true' : 'false'}",
            (params.include_introns ? "--include-introns true" : ""),
            ].join(' ').trim()
        }
    }
    withName: MULTI {
        publishDir = [
            path: {"./results/"},
            mode: 'copy',
            ]
        ext.args = { [
            "nosecondary,${params.nosecondary ? 'true' : 'false'}",
            "create-bam,${params.create_bam ? 'true' : 'false'}",
            (params.include_introns ? "include-introns,true" : ""),
            ].join('\n').trim()
        }
    }
}